{
  "name": "media-service",
  "version": "1.17.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --coverageReporters=text --coverageReporters=html --coverageReporters=cobertura --coverageReporters='json-summary' --detectOpenHandles --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "pre-commit": "./count-logging.sh && lint-staged && ./check-coverage.sh"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^3.0.0-next.3",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.4.7",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/microservices": "^8.4.7",
    "@nestjs/mongoose": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/terminus": "^8.0.1",
    "@nestjs/typeorm": "^8.0.1",
    "@company-name/cloud-core": "bitbucket:company-name/cloud-core-library#1.1.152",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "express-openapi-validator": "^4.12.15",
    "fastify-swagger": "^4.8.4",
    "ioredis": "^4.27.9",
    "kafkajs": "^2.2.3",
    "moment": "^2.29.4",
    "mongoose": "^5.13.15",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.36",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.8",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/semver": "^7.3.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-prettier-standard": "4.0.1",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-promise": "5.1.0",
    "husky": "7.0.2",
    "ioredis-mock": "^5.6.0",
    "jest": "27.0.6",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "prettier-config-standard": "4.0.0",
    "prettier-standard": "^15.0.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      ".module.ts",
      ".dto.ts",
      "src/main.ts",
      ".mock.ts",
      "src/types",
      "src/core",
      "src/logger",
      ".schema.ts",
      ".entity.ts",
      "newrelic.ts",
      "constants.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run format",
      "npm run lint"
    ],
    "*.{md,json,html,yml}": [
      "npm run format"
    ]
  }
}
